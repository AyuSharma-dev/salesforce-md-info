{
	"name": "salesforce-md-info",
	"displayName": "Salesforce MetaData Info",
	"description": "Extension provides information about Salesforce Metadata.",
  "version": "0.0.3",
	"engines": {
		"vscode": "^1.54.0"
	},
	"author": {
		"name": "Ayush Sharma"
	},
	"publisher": "AyuSharma-dev",
	"categories": [
		"Other",
		"Programming Languages",
		"Debuggers"
	],
	"keywords": [
		"salesforce",
		"apex",
		"debug",
		"metadata",
		"information"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:salesforce-md-info.getmdinfo",
		"onCommand:salesforce-md-info.openiteminorg"
	],
	"main": "./out/extension.js",
	"icon": "media/Images/icon.png",
	"galleryBanner": {
		"color": "black",
		"theme": "dark"
	},
	"contributes": {
		"commands": [
			{
				"command": "salesforce-md-info.getmdinfo",
				"title": "MDI: Get Metadata Info"
			},
			{
				"command": "salesforce-md-info.openiteminorg",
				"title": "MDI: Open Item in Org"
			}
		],
		"menus": {
			"editor/context": [{
				"command": "salesforce-md-info.getmdinfo",
				"group": "MDI"
			},
			{
				"command": "salesforce-md-info.openiteminorg",
				"group": "MDI"
			}]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.54.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"repository": {
        "type": "git",
        "url": "https://github.com/AyuSharma-dev/salesforce-md-info.git"
    }
}
